{
	"parser": "babel-eslint",
	"plugins": [
		"react"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
  "globals": {
    "expect" : true
  },
	"env": {
		"browser": true,
		"amd": true,
		"es6": true,
		"node": true,
		"mocha": true
	},
	"rules": {
		"no-cond-assign": 2,
		"comma-dangle": 1,
		"no-undef": 1,
		"global-strict": 0,
		"no-extra-semi": 1,
		"no-underscore-dangle": 0,
		"no-console": 1,
		"no-unused-vars": 1,
		"no-trailing-spaces": [
			1,
			{
				"skipBlankLines": true
			}
		],
		"no-unreachable": 1,
		"no-alert": 0,
		"react/jsx-no-bind": 1,
		"react/no-render-return-value": 0,
		"react/prop-types": 0
	},
	"extends": [
		"plugin:react/recommended"
	]
}
